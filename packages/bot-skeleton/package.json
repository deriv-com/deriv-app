{
    "name": "@deriv/bot-skeleton",
    "version": "1.0.0",
    "description": "Visual automation for Deriv.com",
    "main": "src/app.js",
    "private": true,
    "scripts": {
        "start": "npm run test && npm run serve",
        "build": "shx rm -rf ./dist/ && shx mkdir -p ./dist/media && npm run build:copy",
        "build:copy": "shx cp -r ./node_modules/scratch-blocks/media/. ./dist/media/ &&  shx cp -r ./src/assets/images/. ./dist/media/ &&  shx cp -r ./src/scratch/sounds/. ./dist/media/",
        "build:travis": "echo \"No build:travis specified\"",
        "test": "npm run test:mocha",
        "test:mocha": "echo \"No test:mocha specified\"",
        "test:stylelint": "echo \"No test:stylelint specified\"",
        "deploy": "echo \"No deploy specified\"",
        "deploy:clean": "echo \"No deploy:clean specified\"",
        "deploy:folder": "echo \"No deploy:folder specified\"",
        "deploy:staging": "echo \"No deploy:staging specified\"",
        "deploy:production": "echo \"No deploy:production specified\""
    },
    "author": "Binary.com",
    "license": "MIT",
    "devDependencies": {
        "babel-loader": "^8.0.6",
        "chai": "^4.2.0",
        "deep-diff": "^1.0.2",

{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "Assets/*": ["src/assets/*"],
            "Components/*": ["src/components/*"],
            "Constants/*": ["src/constants/*"],
            "Hooks/*": ["src/hooks/*"],

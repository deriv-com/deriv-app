        "@deriv/js-interpreter": "^3.0.0",
        "@deriv/shared": "^1.0.0",
        "@deriv/translations": "^1.0.0",
        "binary-utils": "^4.23.0",
        "file-saver": "^2.0.2",
        "immutable": "^3.8.2",
        "localforage": "^1.9.0",
        "lz-string": "^1.4.4",
